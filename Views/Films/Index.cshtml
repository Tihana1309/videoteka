<!DOCTYPE html>
<html lang="en">
<head>
    @model Videoteka.Models.MovieGenreViewModel

    @{
        ViewData["Title"] = "Index";
    }
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="background-color: rgb(255,223,125);
background: radial-gradient(circle, rgba(255,223,125,1) 0%, rgba(161,218,242,1) 100%);" ;>
    <h1>Unos</h1>

    <p>
        <a asp-action="Create">Kreiraj novi</a>
    </p>
    <form asp-controller="Films" asp-action="Index" method="get">
        <p>
            <select asp-for="MovieGenre" asp-items="Model.Genres">
                <option value="">Svi</option>
            </select>
            &nbsp;
            Naslov filma: <input type="text" asp-for="SearchString" />
            <input type="submit" value="Filter" />
        </p>
    </form>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Films[0].Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Films[0].ReleaseDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Films[0].Genre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Films[0].Price)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Films)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Izmijeni</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Detalji</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Obriši</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>